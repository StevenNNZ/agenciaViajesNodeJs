extends ./layouts/index

block contenido
    main.container.mt-5.mb-5
        h1.text-center.mt-5 #{pagina}   
        include ./layouts/bloque_testimoniales

        .row

            .col-md-12
                h2#form-testimonial.d-block.w-100.text-center Agrega un testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col
                .col-md-8
                    form(action="/testimoniales" method="post")
                        .form-group
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu Nombre", name="nombre" value=nombre, class="form-control")
                        .form-group
                            label(for="correo") Correo Electr√≥nico
                            input#correo(type="text", placeholder="Tu Correo", name="correo" value=correo, class="form-control")
                        .form-group
                            label(for="mensaje") Mensaje 
                            textarea#mensaje( placeholder="Tu Mensaje", name="mensaje" , class="form-control", rows="3")=mensaje
                        
                        input.btn.btn-success.btn-block(type="submit")
                        
